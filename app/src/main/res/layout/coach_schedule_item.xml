<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Coach_scheduleActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/group_514001"
        >

        <TextView
            android:id="@+id/coach_name2"
            android:layout_width="100dp"
            android:layout_height="31dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="23dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/menti_name"
            android:layout_width="50dp"
            android:layout_height="31dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="23dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="멘티"
            android:gravity="center"/>

        <TextView
            android:id="@+id/class_day"
            android:layout_width="170dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/cancel_class2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="97dp"
            />

        <ImageView
            android:id="@+id/change_class2"
            android:layout_width="160dp"
            android:layout_height="27dp"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="160dp"
            android:layout_marginTop="97dp"
            />
    </RelativeLayout>
</LinearLayout>
