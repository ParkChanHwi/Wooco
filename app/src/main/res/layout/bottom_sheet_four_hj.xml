<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rectangle_9685">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자격증"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="149dp"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/ProfessionalEngineer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기사/기능사"
            android:buttonTint="#696969"
            android:layout_marginStart="40dp"/>

        <RadioButton
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 어학"
            android:buttonTint="#696969"
            android:layout_marginStart="40dp"/>

        <RadioButton
            android:id="@+id/computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 컴퓨터활용능력"
            android:buttonTint="#696969"
            android:layout_marginStart="40dp"/>

        <RadioButton
            android:id="@+id/khistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 한국사"
            android:buttonTint="#696969"
            android:layout_marginStart="40dp"/>

        <RadioButton
            android:id="@+id/etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 기타"
            android:buttonTint="#696969"
            android:layout_marginStart="40dp"/>


    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setting"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:text="확인"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/okbtn"/>

</LinearLayout>
