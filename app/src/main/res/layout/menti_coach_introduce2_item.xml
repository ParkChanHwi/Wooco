<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <View
            android:id="@+id/rectangle_9"
            android:layout_width="380dp"
            android:layout_height="550dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/rectangle_myself" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:text="1. 본인 한 줄 소개"
            android:textStyle="bold"
            android:gravity="top" />

        <TextView
            android:id="@+id/myself1"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:hint="최대 250자"
            android:textSize="11dp"
            android:textColor="#747474"
            android:maxLength="250" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="145dp"
            android:text="2. 코칭 가능 과목"
            android:textStyle="bold"
            android:gravity="top" />

        <TextView
            android:id="@+id/myself2"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:gravity="top"
            android:hint="최대 100자"
            android:textSize="11dp"
            android:textColor="#747474"
            android:maxLength="100" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="289dp"
            android:text="3. 차별점"
            android:textStyle="bold"
            android:gravity="top" />

        <TextView
            android:id="@+id/myself3"
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="318dp"
            android:gravity="top"
            android:hint="최대 250자"
            android:textSize="11dp"
            android:textColor="#747474"
            android:maxLength="250" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="430dp"
            android:text="4. 과목별 코칭 방식"
            android:textStyle="bold"
            android:gravity="top" />

        <TextView
            android:id="@+id/myself4"
            android:layout_width="340dp"
            android:layout_height="99dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="450dp"
            android:gravity="top"
            android:hint="최대 250자"
            android:textSize="11dp"
            android:textColor="#747474"
            android:maxLength="250" />

    </RelativeLayout>
</LinearLayout>