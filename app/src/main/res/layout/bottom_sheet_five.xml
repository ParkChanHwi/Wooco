<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D9D9D9">

    <!-- 마케팅 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마케팅"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 기획 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기획"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 사무직 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사무직"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 전문/특수/연구직 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전문/특수/연구직"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 무역/유통 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="무역/유통"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 서비스 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서비스"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- IT -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 디자인 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="디자인"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 영업 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영업"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 교육 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교육"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 건설 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="건설"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <!-- 의료 -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의료"
            android:buttonTint="#696969"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="329dp"
        android:text="설정"
        android:textColor="@color/white"
        android:background="@drawable/rectangle_9533"/>

</LinearLayout>
