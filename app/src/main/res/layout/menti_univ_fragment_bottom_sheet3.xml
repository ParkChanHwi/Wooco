<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rectangle_9878">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="면접"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="154dp"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/category_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 편입"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 기업"
                android:buttonTint="#696969"
                android:layout_marginLeft="133dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/government"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 공무원"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/employment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 임용"
                android:buttonTint="#696969"
                android:layout_marginLeft="120dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 병원"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 기타"
                android:buttonTint="#696969"
                android:layout_marginLeft="133dp"/>
        </LinearLayout>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category_setting"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:text="확인"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/okbtn"/>
    <!-- 추가 카테고리 버튼들 -->

</LinearLayout>