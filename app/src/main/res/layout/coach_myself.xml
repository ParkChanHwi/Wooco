<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#F4F8FD">

    <View
        android:id="@+id/line_9"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/line_9"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/arrow"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="26dp"
        android:text="코치 등록하기"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        />

    <View
        android:id="@+id/rectangle_9"
        android:layout_width="380dp"
        android:layout_height="550dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:background="@drawable/rectangle_myself"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:text="1. 본인 한 줄 소개"
        android:textStyle="bold"
        android:gravity="top"
        />

    <EditText
        android:id="@+id/myself1"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="114dp"
        android:gravity="top"
        android:hint="  코치님의 수업을 잘 나타낼 수 있는 마법의 한 문장 !"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#D9D9D9"
        android:maxLength="250"
        android:background="@drawable/mayself_s"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="192dp"
        android:text="2. 코칭 가능 과목"
        android:textStyle="bold"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/myself2"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="216dp"
        android:gravity="top"
        android:hint="  코치님께서 코칭 가능한 과목을 적어주세요."
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="#747474"
        android:maxLength="100"
        android:background="@drawable/mayself_s"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="288dp"
        android:text="3. 차별점"
        android:textStyle="bold"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/myself3"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="312dp"
        android:gravity="top"
        android:hint="  과목 별 코칭 방식을 자세히 작성해주세요!"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#747474"
        android:maxLength="250"
        android:background="@drawable/mtself_b"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="490dp"
        android:text="4. 과목별 코칭 방식"
        android:textStyle="bold"
        android:gravity="top"
        />
    <EditText
        android:id="@+id/myself4"
        android:layout_width="325dp"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="517dp"
        android:gravity="top"
        android:hint="  코치님만의 특별한 코칭 차별점은 무엇인가요?"
        android:textSize="11dp"
        android:textStyle="bold"
        android:textColor="#747474"
        android:maxLength="250"
        android:background="@drawable/mtself_b"
        />


    <android.widget.Button
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="700dp"
        android:text="등록"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#0F4C81"
        />

</RelativeLayout>