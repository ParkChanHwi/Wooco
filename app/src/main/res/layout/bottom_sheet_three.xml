<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/fragment_bottom_sheet"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp"
android:background="@drawable/category_box3">

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@android:color/darker_gray" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="면접"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|top"/>
    </LinearLayout>

<RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/transition"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:text="편입"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>

    <!-- 기업 -->
    <RadioButton
        android:id="@+id/company"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="기업"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>

    </LinearLayout>

    <!-- 공무원 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/publicoffice"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:text="공무원"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>

    <!-- 임용 -->
    <RadioButton
        android:id="@+id/eduemploy"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="임용"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>
    </LinearLayout>
    <!-- 병원 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/hospital"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="26dp"
        android:text="병원"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>

    <!-- 기타 -->
    <RadioButton
        android:id="@+id/etc"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="기타"
        android:textSize="15sp"
        android:buttonTint="#696969"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:padding="7dp"
        android:button="@android:color/transparent"
        android:background="@drawable/rec_bottom1"/>
    </LinearLayout>

</RadioGroup>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/setting"
    android:layout_width="270dp"
    android:layout_height="37dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"
    android:text="확인"
    android:textColor="@android:color/white"
    android:background="@drawable/cofirm1" />

</LinearLayout>
