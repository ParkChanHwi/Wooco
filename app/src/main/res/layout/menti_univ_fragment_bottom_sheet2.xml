<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#D9D9D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진로/기타 고민"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="124dp"
            />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">


        <RadioButton
            android:id="@+id/humanities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="#696969"
            android:text=" 인문/사회" />

        <RadioButton
            android:id="@+id/arts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 예체능"
            android:buttonTint="#696969"
            android:layout_below="@id/humanities"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 보건"
            android:buttonTint="#696969"
            android:layout_below="@id/arts"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/engineering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 공학"
            android:buttonTint="#696969"
            android:layout_below="@id/medicine"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 교육"
            android:buttonTint="#696969"
            android:layout_below="@id/engineering"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/nature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 자연"
            android:buttonTint="#696969"
            android:layout_below="@id/education"
            android:layout_marginTop="10dp"/>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category_setting2"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="328dp"
        android:background="@drawable/rectangle_9533"
        android:text="설정"
        android:textColor="@color/white"
        android:layout_below="@id/radioGroup"
        android:layout_marginTop="16dp"/>

    <!-- 추가 카테고리 버튼들 -->

</RelativeLayout>
