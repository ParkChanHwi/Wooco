<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rectangle_9685">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전공/과제"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="144dp"
            />
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/humanities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 인문/사회"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/arts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 예체능"
                android:buttonTint="#696969"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 보건"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/engineering"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 공학"
                android:buttonTint="#696969"
                android:layout_marginLeft="133dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 교육"
                android:buttonTint="#696969"
                android:layout_marginStart="40dp"/>
            <RadioButton
                android:id="@+id/nature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 자연"
                android:buttonTint="#696969"
                android:layout_marginLeft="133dp"/>
        </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category_setting2"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:text="확인"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/okbtn"/>
    <!-- 추가 카테고리 버튼들 -->

</LinearLayout>
